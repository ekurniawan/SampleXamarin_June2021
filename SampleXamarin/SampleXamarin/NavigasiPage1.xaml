<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleXamarin.NavigasiPage1" Title="Coba Navigasi">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="menuViewCell" Text="Add" IconImageSource="ic_add.png" Order="Primary" 
                     Clicked="menuViewCell_Clicked"/>
        <ToolbarItem x:Name="menuSimpleList" Text="Simple ListView" Order="Secondary" Clicked="menuSimpleList_Clicked" />
        <ToolbarItem x:Name="menuImageList" Text="Image List" Order="Secondary" Clicked="menuImageList_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="entryPesan" Placeholder="masukan pesan yg dikirim" />
            <Button x:Name="btnSimpleList" Text="Simple List" Clicked="btnSimpleList_Clicked" />
            <Button x:Name="btnGlobalVar" Text="Image List" Clicked="btnGlobalVar_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>