<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleXamarin.MainPage">

    <StackLayout>
        <Frame BackgroundColor="Red" Padding="24" CornerRadius="30">
            <Label Text="Selamat Datang Xamarin Forms" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label x:Name="lblMessage" HorizontalOptions="Center" Text="Hello Xamarin" FontSize="Medium" />
        <StackLayout Orientation="Horizontal">
            <Button x:Name="btnShow" Text="Show Message" Clicked="btnShow_Clicked" />
            <Button x:Name="btnAdd" Text="Add" />
            <Button x:Name="btnDelete" Text="Delete" />
        </StackLayout>
    </StackLayout>

</ContentPage>
